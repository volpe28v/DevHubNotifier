{
    "manifest_version": 2,
    "name": "DevHubNotifier",
    "version": "1.0",
    "description": "DevHubの発言を通知",
    "icons": { "48": "icons/icon_048.png",
              "128": "icons/icon_128.png" },
    "background": {
      "persistent": false,
      "scripts": ["js/jquery.min.js", "js/socket.io.js", "js/background.js"]
    },
    "permissions": [
      "http://*/","https://*/"
    ],
    "browser_action" : {
      "default_icon" : "icons/icon.png",
      "default_title" : "Popup",
      "default_popup" : "popup.html"
    }
}
